@{
    ViewBag.Title = "登录";
}

<div class="modal fade" id="loginSubmitModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">登陆账号以获取更多的服务内容</h4>
            </div>       
            <div class="row modal-tab-selector">
                <div class="col-lg-6 position-middle-container">
                    <a href="#login" class="position-middle-object active" data-toggle="tab">
                        <i class="fa fa-sign-in"></i>登陆
                    </a>
                </div>
                <div class="col-lg-6 position-middle-container">
                    <a href="#register" class="position-middle-object" data-toggle="tab">
                        <i class="fa fa-user-plus"></i>注册
                    </a>
                </div>
            </div>
            <div id="" class="tab-content">
                <div class="tab-pane fade in active" id="login">
                    @Html.Partial("_LoginModalPartial", new RabbitHouse.Models.LoginViewModel())
                </div>
                <div class="tab-pane fade" id="register">
                    @Html.Partial("_RegisterModalPartial", new RabbitHouse.Models.RegisterViewModel())
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    $(function () {
        $('.modal-tab-selector a').click(function (item, e) {
            $('.modal-tab-selector a').removeClass('active');
            $(this).addClass('active');
        });
        $("#loginSubmitModal").on('show.bs.modal', function (event) {
            //the <a> tag in the _LoginPartial
            var aTag = $(event.relatedTarget);

            var modal = $(this);
            //add active&in class to content in the modal
            modal.find('.tab-pane').removeClass('in').removeClass('active');
            modal.find(aTag.data('aim')).addClass('in').addClass('active');

            //add active class to link in the modal
            $('.modal-tab-selector a').removeClass('active');
            $('.modal-tab-selector a[href="' + aTag.data('aim') + '"]').addClass('active');
        });
    });
</script>