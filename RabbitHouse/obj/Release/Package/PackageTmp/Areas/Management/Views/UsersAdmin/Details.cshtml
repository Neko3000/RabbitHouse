@model AccountAdmin.ViewModels.UsersAdminDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutBracket.cshtml";
}

<div class="pageheader">
    <h2><i class="fa fa-edit"></i> UsersAdmin<span>进行账户的管理</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","SystemManage")">首页</a></li>
            <li>账户</li>
            <li><a href="@Url.Action("Index","UsersAdmin")">用户列表</a></li>
            <li class="active">账户信息</li>
        </ol>
    </div>
</div>

<div class="contentpanel">
    <div class="panel panel-default">

        <div class="panel-heading">
            <div class="panel-btns">
                <a class="panel-close"></a>
                <a class="minimize"></a>
            </div>
            <h4 class="panel-title">@(Model.UserName)的用户信息</h4>
            <p>您可以在此查看单个用户的信息.</p>
        </div>

        <div class="panel-body panel-body-nopadding">
            <div class="form-horizontal form-bordered">
                <div class="form-group">
                    @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.UserId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RolesNameForUser, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @for (int i = 0; i < Model.RolesNameForUser.Count(); i++)
                        {
                            @Model.RolesNameForUser[i];
                            if (i != Model.RolesNameForUser.Count() - 1)
                            {
                                <span>/</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- contentpanel -->

