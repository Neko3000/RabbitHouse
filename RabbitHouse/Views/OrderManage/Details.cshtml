@model RabbitHouse.ViewModels.OrderManageDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutBracket.cshtml";
}

<div class="pageheader">
    <h2><i class="fa fa-edit"></i> General Forms <span>Subtitle goes here...</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","CMS")">首页</a></li>
            <li>商品</li>
            <li><a href="@Url.Action("Index","BookManage")">商品列表</a></li>
            <li class="active">商品信息</li>
        </ol>
    </div>
</div>

<div class="contentpanel">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-btns">
                <a class="panel-close"></a>
                <a class="minimize"></a>
            </div>
            <h4 class="panel-title">商品分类信息</h4>
            <p>您可以在此查看单个商品分类的信息.</p>
        </div>

        <div class="panel-body panel-body-nopadding">
            <div class="form-horizontal form-bordered">
                <div class="form-group">
                    @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Id, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.User.UserName, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Total, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("收件地址", htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Model.PostalCode @Model.Country @Model.Province @Model.City @Model.Locality
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RecipientName, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.RecipientName, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Note, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RecordTime, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.RecordTime, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OrderDetails, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @foreach (var item in Model.OrderDetails)
                        {
                            <div class="row mb20">
                                <div class="col-sm-12 col-md-2 mb5">
                                    @item.Product.Name
                                </div>
                                <div class="col-sm-12 col-md-2 mb5">
                                    <img src="@item.ProductProperty.ImgUrl" />
                                </div>
                                <div class="col-sm-12 col-md-2 mb5">
                                    ￥@item.UnitPrice
                                </div>
                                <div class="col-sm-12 col-md-2 mb5">
                                    x @item.Count
                                </div>
                                <div class="col-sm-12 col-md-2 mb5">
                                    ￥@(item.UnitPrice*item.Count)
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <a class="btn btn-default" href="@Url.Action("Index","ProductCategoryManage")">返回</a>
                </div>
            </div>
        </div>
    </div>

</div><!-- contentpanel -->