@model RabbitHouse.ViewModels.ArticleManageDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutBracket.cshtml";
}

<div class="pageheader">
    <h2><i class="fa fa-edit"></i> ArticleManage<span>进行文章管理</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","SystemManage")">首页</a></li>
            <li>文章</li>
            <li><a href="@Url.Action("Index","ArticleManage")">文章列表</a></li>
            <li class="active">文章信息</li>
        </ol>
    </div>
</div>

<div class="contentpanel">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-btns">
                <a class="panel-close"></a>
                <a class="minimize"></a>
            </div>
            <h4 class="panel-title">文章信息</h4>
            <p>您可以在此查看单篇文章的信息.</p>
        </div>

        <div class="panel-body panel-body-nopadding">
            <div class="form-horizontal form-bordered">
                <div class="form-group">
                    @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Id, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Category.Name, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShortDescription, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CoverImgUrl, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        <div>
                            <img class="mb10" src="@Model.CoverImgUrl" alt="..." />
                        </div>
                        @Html.DisplayFor(model => model.CoverImgUrl, new { htmlAttributes = new { @id = "post-img-path", @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Meta, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Meta, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UrlSlug, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.UrlSlug, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsPublished, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.IsPublished, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PostTime, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.PostTime, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ModifyTime, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.ModifyTime, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Meta, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @Html.DisplayFor(model => model.Meta, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Tags, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 control-content">
                        @foreach (var tag in Model.Tags)
                        {
                            @(tag.Name + ",")
                        }
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-6 col control-content">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <a class="btn btn-default" href="@Url.Action("Index","ArticleManage")">返回</a>
                </div>
            </div>
        </div>
    </div>

</div><!-- contentpanel -->