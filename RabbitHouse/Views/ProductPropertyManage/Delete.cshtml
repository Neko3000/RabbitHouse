@model RabbitHouse.ViewModels.ProductPropertyManageDeleteViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutBracket.cshtml";
}

<div class="pageheader">
    <h2><i class="fa fa-edit"></i> ProductPropertyManage<span>进行文章管理</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "SystemManage")">首页</a></li>
            <li>文章</li>
            <li><a href="@Url.Action("Index", "ProductPropertyManage")">文章列表</a></li>
            <li class="active">文章删除</li>
        </ol>
    </div>
</div>

<div class="contentpanel">
    <div class="panel panel-default">
        @using (Html.BeginForm("Delete", "ArticleManage", FormMethod.Post, htmlAttributes: new { @class = "" }))
        {
            <div class="panel-heading">
                <div class="panel-btns">
                    <a class="panel-close"></a>
                    <a class="minimize"></a>
                </div>
                <h4 class="panel-title">文章删除</h4>
                <p>您确定要删除以下文章吗？.</p>
                @Html.ValidationSummary()
            </div>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="panel-body panel-body-nopadding">
                <div class="form-horizontal form-bordered">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6 control-content">
                            @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6 control-content">
                            @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PlusPrice, htmlAttributes: new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6 control-content">
                            @Html.DisplayFor(model => model.PlusPrice, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ImgUrl, htmlAttributes: new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-6 control-content">
                            @Html.DisplayFor(model => model.ImgUrl, new { htmlAttributes = new { @class = "", @placeholder = "" } })
                        </div>
                    </div>

                </div>
            </div>

            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <button class="btn btn-danger" type="submit">删除</button>
                        <a class="btn btn-default" href="@Url.Action("Index")">返回</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div><!-- contentpanel -->